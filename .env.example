# VideoTagger Configuration
# Copy this file to .env and fill in your credentials

# =============================================================================
# Synology NAS
# =============================================================================
SYNOLOGY_HOST=TheConqueror
SYNOLOGY_USER=Lucas
SYNOLOGY_PASSWORD=your_synology_password_here
SYNOLOGY_VIDEO_PATH=/volume1/The Conqueror NAS/Video Team

# =============================================================================
# Airtable
# =============================================================================
AIRTABLE_API_KEY=patXXXXXXXXXXXXXX.XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX
AIRTABLE_BASE_ID=appXXXXXXXXXXXXXX
AIRTABLE_TABLE_ID=tblXXXXXXXXXXXXXX

# =============================================================================
# RunPod S3 Storage
# =============================================================================
RUNPOD_S3_ENDPOINT=https://s3api-eu-ro-1.runpod.io
RUNPOD_S3_BUCKET=your_bucket_name
RUNPOD_S3_ACCESS_KEY=user_XXXXXXXXXXXXXXXXXXXXXXXX
RUNPOD_S3_SECRET_KEY=rps_XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX

# =============================================================================
# RunPod SSH
# =============================================================================
RUNPOD_SSH_HOST=ssh.runpod.io
RUNPOD_SSH_USER=your_pod_id-XXXXXXXX
RUNPOD_SSH_KEY_PATH=~/.ssh/id_ed25519
RUNPOD_SSH_POD_ID=your_pod_id

# =============================================================================
# LLM (vLLM) Configuration
# =============================================================================
# Endpoint URL for the vLLM server (OpenAI-compatible API)
LLM_ENDPOINT=http://localhost:8000/v1
# Model name for vision-language analysis
LLM_MODEL=Qwen/Qwen2.5-VL-7B-Instruct
# API key (use 'EMPTY' for local vLLM without auth)
LLM_API_KEY=EMPTY
# Number of frames to extract from video (1-32)
LLM_FRAME_COUNT=8
